<%- include('partials/_header'); %>

<div class="container mt-5" >
    <div class="row">
        <div class="col-md-5">
            <div class="card-body">
                <form action = "/update/<%= data.id %>" method = "post">
                    <div class ="form-group">
                            <input type="text" name="placa" value="<%= data.placa %>" class="form-control">
                    </div>
                    <div class ="form-group">
                        <select id="combobox" name="tipovehiculo" value="<%= data.tipovehiculo %>" class="form-control">
                            <option value="" disabled selected>Selecciona un vehiculo...</option>
                            <option value="Carro">Carro</option>
                            <option value="Moto">Moto</option>
                            
                          </select>
                    </div>
                    <div class ="form-group">
                        <input type="text" name="telefono" value="<%= data.telefono %>" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">
                        Actualizar 
                    </button>
                    </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer'); %>